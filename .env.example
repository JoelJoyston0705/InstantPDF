# Root .env.example - For Docker Compose
# Copy this to .env and update values before running docker-compose

# JWT Secret - REQUIRED
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL_RAND_HEX_32

# PostgreSQL Password - REQUIRED
# Use a strong, unique password
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD

# Email Settings (Optional - for password reset)
# For Gmail: Use an App Password from https://myaccount.google.com/apppasswords
SMTP_EMAIL=
SMTP_PASSWORD=
